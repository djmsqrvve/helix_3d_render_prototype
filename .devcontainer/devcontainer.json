{
    "name": "Helix 3D Lab",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb",
                "usernamehw.errorlens"
            ]
        }
    },
    "postCreateCommand": "cargo build --features egui",
    "remoteEnv": {
        "WINIT_UNIX_BACKEND": "x11"
    },
    "runArgs": [
        "--init"
    ]
}
